@model List<Creator>

@{
    ViewData["Title"] = "Home Page";
}


<div id="modal">
    <header class="text-black"><h1>Creator List</h1></header>
    <section>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Edit</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var creator in Model)
                {
                    <tr>
                        <td style="width:10%">
                            <p class="text-black BoxTableItems">@creator.Email</p>
                        </td>
                        <td style="width:30%">
                            <p class="text-black BoxTableItems">@creator.CreatorName</p>
                        </td>
                        <td style="width:30%">
                            <p class="text-black BoxTableItems">@creator.ContentPlatforms</p>
                        </td>
                        <td style="width:30%">
                            <p class="text-black BoxTableItems">@creator.RequestKey</p>
                        </td>

                        <td style="width:10%">
                            <a asp-controller="Admin" asp-action="AdminCreatorDetails"
                               asp-route-id="@creator.CreatorId"><button class="round-button bg-danger text-decoration-underline-none">Details</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </section>
</div>
