@model List<SupportRequest>

@{
    ViewData["Title"] = "Home Page";
}


<div id="modal">
    <header class="text-black"><h1>Support Questions List</h1></header>
    <section>

        <a asp-controller="Admin" asp-action="AdminFAQAdd"><button class="round-button">Add FAQ</button></a>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Edit</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var support in Model)
                {
                    <tr>
                        <td style="width:10%">
                            <p class="text-black BoxTableItems">@support.SupportEmail</p>
                        </td>
                        <td style="width:30%">
                            <p class="text-black BoxTableItems">@support.Subject</p>
                        </td>
                        <td style="width:30%">
                            <p class="text-black BoxTableItems">@support.Question</p>
                        </td>
                        <td style="width:10%">
                            <a asp-controller="Admin" asp-action="AdminFAQEdit"
                               asp-route-id="@support.SupportRequestId"><button class="round-button bg-warning">Edit</button></a>
                        </td>
                        <td style="width:10%">
                            <a asp-controller="Admin" asp-action="SaveFAQRemove"
                               asp-route-id="@support.SupportRequestId"><button class="round-button bg-danger text-decoration-underline-none">Remove</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </section>
</div>


