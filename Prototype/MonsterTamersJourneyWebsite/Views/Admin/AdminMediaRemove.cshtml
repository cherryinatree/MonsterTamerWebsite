@model List<Media>

@{
    ViewData["Title"] = "Home Page";
}


<div id="modal">
    <header class="text-black"><h1>Media List</h1></header>
    <section>

        <a asp-controller="Admin" asp-action="AdminMediaAdd"><button class="round-button">Add Media</button></a>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Edit</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var media in Model)
                {
                    <tr>
                        <td style="width:10%">
                            <p class="text-black BoxTableItems">@media.Order</p>
                        </td>
                        <td style="width:15%">
                            <p class="text-black BoxTableItems">@media.Title</p>
                        </td>
                        <td style="width:15%">
                            <p class="text-black BoxTableItems">@media.isImage</p>
                        </td>
                        <td style="width:15%">
                            <p class="text-black BoxTableItems">@media.ImageUrl</p>
                        </td>
                        <td style="width:15%">
                            <p class="text-black BoxTableItems">@media.VideoUrl</p>
                        </td>
                        <td style="width:10%">
                            <a asp-controller="Admin" asp-action="AdminMediaEdit"
                               asp-route-id="@media.MediaId"><button class="round-button bg-warning">Edit</button></a>
                        </td>
                        <td style="width:10%">
                            <a asp-controller="Admin" asp-action="SaveMediaRemove"
                               asp-route-id="@media.MediaId"><button class="round-button bg-danger text-decoration-underline-none">Remove</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </section>
</div>


